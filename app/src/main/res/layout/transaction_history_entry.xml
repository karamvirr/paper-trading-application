<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_selector"
    android:layout_marginStart="@dimen/vMargin"
    android:layout_marginLeft="@dimen/vMargin"
    android:layout_marginEnd="@dimen/vMargin"
    android:layout_marginRight="@dimen/vMargin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/underline_gray"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/transaction_type"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/transaction_date"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:textColor="@color/lightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/transaction_value"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_forward"
            android:layout_toStartOf="@id/arrow_forward"
            android:layout_marginRight="@dimen/vMargin"
            android:layout_marginEnd="@dimen/vMargin"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/arrow_forward"
            android:src="@drawable/ic_arrow_forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>